{
  "name": "gestoteam-desktop",
  "version": "0.0.1",
  "description": "Aplicaci√≥n de escritorio para GestoTeam",
  "main": "main.js",
  "author": "GestoTeam AI",
  "license": "UNLICENSED",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/sergio-rdguez/GestoTeam.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --x64",
    "release": "electron-builder --win --x64 --publish always",
    "clean": "rimraf dist-electron",
    "postinstall": "electron-builder install-app-deps",
    "build:packager": "electron-packager . GestoTeam --platform=win32 --arch=x64 --out=dist-electron --overwrite --ignore=node_modules/electron-builder",
    "build:simple": "electron-packager . GestoTeam --platform=win32 --arch=x64 --out=dist-electron --overwrite",
    "build:complete": "node build-complete.js && electron-packager . GestoTeam --platform=win32 --arch=x64 --out=dist-electron --overwrite",
    "build:professional": "node build-professional.js",
    "prepare": "node build-complete.js",
    "version:check": "node version-manager.js",
    "version:sync": "node version-manager.js && npm run prepare"
  },
  "build": {
    "appId": "com.gestoteam.desktop",
    "productName": "GestoTeam Desktop",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "app",
        "to": "app"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GestoTeam Desktop",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": true,
      "include": "build/installer.nsh"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "@electron/packager": "^18.4.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  }
}
