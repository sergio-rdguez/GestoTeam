{
  "name": "gestoteam-desktop",
  "version": "0.0.1",
  "description": "Aplicaci√≥n de escritorio para GestoTeam",
  "main": "main.js",
  "author": "GestoTeam AI",
  "license": "UNLICENSED",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/sergio-rdguez/GestoTeam.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "clean": "rimraf dist-electron app",
    "postinstall": "electron-builder install-app-deps",
    "build": "node build-complete.js",
    "build:local": "node build-complete.js",
    "build:professional": "node build-complete.js",
    "compile-installer": "node compile-installer.js",
    "check-nsis": "node check-nsis.js",
    "version:check": "node version-manager.js",
    "verify-java": "node verify-java-runtime.js",
    "check-java-system": "node check-java-system.js",
    "install-java": "node install-java-system.js"
  },
  "build": {
    "appId": "com.gestoteam.desktop",
    "productName": "GestoTeam Desktop",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "asar": true,
    "asarUnpack": [
      "frontend/**/*",
      "java-runtime/**/*"
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "app/java-runtime",
        "to": "java-runtime",
        "filter": ["**/*"]
      },
      {
        "from": "app/gestoteam.jar",
        "to": "gestoteam.jar"
      },
      {
        "from": "app/frontend",
        "to": "frontend"
      },
      {
        "from": "app/app-config.json",
        "to": "app-config.json"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GestoTeam Desktop",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": true,
      "perMachine": false,
      "allowElevation": false
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}
